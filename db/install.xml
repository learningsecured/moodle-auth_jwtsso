<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="auth/jwtsso/db" VERSION="2025103100" COMMENT="JWT SSO tables" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <TABLES>
    <TABLE NAME="auth_jwtsso_nonces" COMMENT="One-time nonces and JWT IDs">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="nonce" TYPE="char" LENGTH="64" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="jti" TYPE="char" LENGTH="64" NOTNULL="false" DEFAULT=""/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="expires" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="used" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="uniq_nonce" UNIQUE="true" FIELDS="nonce"/>
        <INDEX NAME="jti_idx" UNIQUE="false" FIELDS="jti"/>
        <INDEX NAME="expires_idx" UNIQUE="false" FIELDS="expires"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>

